<UserControl x:Class="WPFTestApp.TestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTestApp"
             xmlns:styling="www.WPFTestApp.com/Styling"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <styling:Styles />
                </ResourceDictionary.MergedDictionaries>

                <styling:Verifier x:Key="item" />
            </ResourceDictionary>
        </Grid.Resources>
        <Button Content="Hello" styling:Attached.Verifier="{StaticResource item}"
                x:Name="testButton"
                Style="{StaticResource verifierBasedEnabledStyle}">
            
        </Button>
    </Grid>
</UserControl>
